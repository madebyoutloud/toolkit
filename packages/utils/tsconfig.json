{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "~/*": ["src/*"]
    },
    "strictPropertyInitialization": false,
    "outDir": "dist",
    "esModuleInterop": true
  },
  "include": ["src", "tests"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
